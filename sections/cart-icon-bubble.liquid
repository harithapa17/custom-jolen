{%- liquid
  if cart == empty
    render 'icon-cart-empty'
  else
    render 'icon-cart'
  endif
-%}
<div class="cart-count-bubble">
  <span>{{ cart.item_count }}</span>
</div>
{%- if cart != empty -%}
  <div class="cart-count-bubble">
    {%- if cart.item_count < 100 -%}
      <span id="get_qt">{{ cart.item_count }}</span>
    {%- endif -%}
    <span id="get_qt" class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
  </div>
{% else %}
  <div class="cart-count-bubble">
    <span id="get_qt">{{ cart.item_count }}</span>
  </div>
{%- endif -%}
