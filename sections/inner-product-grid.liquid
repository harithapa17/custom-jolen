{% comment %}
  <div class="collection-category-block page-width">
    {% assign i = 1 %}
    {% for product in collection.products %}
      {% assign remainder = forloop.index0 | modulo: 3 %}
      {% if remainder == 0 %}
        <div class="collection-list-single">
          {% for block in section.blocks %}
            {% if block.settings.section_image %}
              <div class="collection-list-single-bg">
                {% if forloop.index == forloop.parent.loop.first %}
                  <img src="{{ block.settings.section_image | image_url: width: 500 }}" alt="Section Image">
                {% else %}

                  {% if prev_block.settings.section_image %}
                    <img src="{{ prev_block.settings.section_image | image_url: width: 500 }}" alt="Section Image">
                  {% else %}
                    <img src="{{ block.settings.section_image | image_url: width: 500 }}" alt="Section Image">
                  {% endif %}
                {% endif %}
              </div>
              {% break %}
            {% endif %}
          {% endfor %}

          <div class="collection-single-list-products">
            {% for block in section.blocks %}
              {% for i in (i..8) %}
                <div class="collection-list-prd">
                  <div class="collection-list-prd-img">
                    {% assign product_key = 'product' | append: i %}
                    {% if block.settings[product_key] %}
                      {% assign alt_text = block.settings[product_key] %}
                      {% if alt_text != 'Section Image' %}
                        <img src="{{ block.settings[product_key] | image_url: width: 500 }}" alt="{{ alt_text }}">
                      {% endif %}
                    {% endif %}
                  </div>
                  <div class="collection-list-prd-data">
                    <h3>{{ block.settings[product_key].title }}</h3>
                    <h4>{{ block.settings[product_key].price }}</h4>
                  </div>
                </div>
                {% assign i = i | plus: 1 %}
              {% endfor %}
            {% endfor %}
          </div>
        </div>
      {% endif %}

      <div class="collection-category-prd">
        <div class="collection-single-list-products">
          <div class="collection-list-prd">
            <div class="collection-list-prd-img">
              <img src="{{ product.featured_image | image_url: width: 500 }}" alt="Product Image">
            </div>
            <div class="collection-list-prd-data">
              <h3>{{ product.title | escape }}</h3>
              <h4>{{ product.price | escape }}</h4>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var collectionSingleListProducts = document.querySelectorAll('.collection-single-list-products');
    collectionSingleListProducts.forEach(function (element) {
      if (element.children.length === 3) {
        element.classList.add('grid-3-column');
      } else if (element.children.length === 2) {
        element.classList.add('grid-2-column');
      } else if (element.children.length === 1) {
        element.classList.add('grid-1-column');
      } else {
      }
    });
  });
</script>
